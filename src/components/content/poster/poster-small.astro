---
const {imageSrc, imageAlt, imageTitle} = Astro.props;
---

<section class="py-0 poster-small">
  <picture class="m-0 p-0 mb-4 mb-md-0">
    <img class="parallax" src={ imageSrc } alt={ imageAlt } title={ imageTitle } />
  </picture>
</section>

<style lang="scss">

  .poster-small {
    width: 100%;
    height: 60vh;
    overflow: hidden;
  }

  picture {
    width: 100%;
    height: 100%;
    position: relative;
    display: block;
  }

  picture img {
    height: auto;
    width: 100%;
  }

  /* Darkmode */
    body.darkmode h2 {
  }
</style>
