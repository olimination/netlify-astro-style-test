---
const {title, lead, videoSrc, detailLink, posterSrc} = Astro.props;
---


<section class="project-teaser py-6">
  <div class="container-xxl">
    <div class="row scroll-reveal">
      <div class="col-12 col-md-6 col-lg-7" data-cursor-pointer>
        <a href={ detailLink } aria-label="zum Projekt">
          <picture class="m-0 p-0 mb-4 mb-md-0 parallaxOFF" data-cursor-text="zum Projekt">
            <video autoplay loop muted playsinline title={ title } poster={ posterSrc }>
              <source src={ videoSrc } type="video/mp4" />
            </video>
          </picture>
        </a>
      </div>
      <div class="col-12 col-md-6 col-lg-5 col-xl-4 offset-xl-1 d-flex flex-column justify-content-center align-items-start mb-4 mb-md-0">
        <h3 class="lead-text m-0"><a href={ detailLink }>{ lead }</a></h3>
        <h4 class="pb-3 m-0"><a href={ detailLink }>{ title }</a></h4>
      </div>
    </div>
  </div>
</section>


<style lang="scss">
  @import '../../../styles/variables';

  section.project-teaser {
    picture {
      position: relative;
      width: 100%;
      height: auto;
      display: flex;
      position: relative;
      overflow: hidden;
    }

    picture:before {
      content: "";
      width: 100%;
      padding-bottom: 67%;
      display: block;
      z-index: 0;
    }

    picture video {
      position: absolute;
      height: 100%;
      width: 100%;
      top: 0;
      left: 0;
      object-fit: cover;
      object-position: 50% 50%;
      z-index: 1;
      display: block;
      -webkit-transition: all 0.3s ease-in-out;
      -moz-transition: all 0.3s ease-in-out;
      -ms-transition: all 0.3s ease-in-out;
      -o-transition: all 0.3s ease-in-out;
      transition: all 0.3s ease-in-out;
      transform-origin: bottom center;
    }

    section > .container-xxl > .row > div:first-child() {
      order: 99;
    }


    h4 a,
    h4 a:hover {
      color: $text-color-hover;
      text-decoration: none;
      border-bottom: 0;
    }

    h3 a,
    h3 a:hover {
      color: $text-color;
      text-decoration: none;
      border-bottom: 0;
    }

    h4 {
        order:0;
    }

    h3 {
        order:1;
    }
  }


  /* Darkmode */
  body.darkmode {
    section.project-teaser h3 a,
    section.project-teaser h3 a:hover {
      color: $text-color-darkmode !important;
      text-decoration: none;
      border-bottom: 0;
    }
    section.project-teaser h4 a,
    section.project-teaser h4 a:hover {
      color: $text-color-hover;
      text-decoration: none;
      border-bottom: 0;
    }
  }


  @media (min-width: 576px) {
  }

  @media (min-width: 768px) {
    section:nth-child(odd) > .container-xxl > .row > div:first-child() {
      order:-1;
    }

    section:nth-child(even) > .container-xxl > .row > div:first-child() {
      order: 99;
    }
  }

  @media (min-width: 992px) {

  }

  @media (min-width: 1200px) {

  }

  @media (min-width: 1400px) {

  }

</style>

